<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.livevideo.VideoPlayActivity" >
   
     <io.vov.vitamio.widget.VideoView
        android:id="@+id/videoview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
     
    <LinearLayout 
        android:id="@+id/video_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">
        <ProgressBar 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView 
            android:id="@+id/video_loading_perce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:text="正在缓冲"
            android:textColor="#f42343"
            android:textSize="20sp"
            />
    </LinearLayout>
    <FrameLayout 
        android:id="@+id/operation_volume_brightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#00000000"
        android:visibility="invisible"
        >
        <TextView 
            android:id="@+id/tv_operation_change"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#f52342"
            android:textSize="20sp"
            />
        <FrameLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            >
            <TextView 
            android:id="@+id/tv_operation_full"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="音量"
            android:gravity="top|center_horizontal"
            android:textColor="#f52342"
            android:textSize="20sp"
            android:layout_gravity="left"
            />
             <TextView 
            android:id="@+id/tv_operation_percent"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_gravity="left|bottom"
            android:background="@android:color/holo_blue_light"
            />
        </FrameLayout>
    </FrameLayout>
</RelativeLayout>
